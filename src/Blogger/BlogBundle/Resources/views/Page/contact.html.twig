{# src/Blogger/BlogBundle/Resources/views/Page/contact.html.twig #}
{% extends 'BloggerBlogBundle::layout.html.twig' %}

{% block title %}Contact{% endblock%}

{% block body %}
    <header>
        <h1>Contact symblog</h1>
    </header>

    {% for msg in app.session.flashBag.get('blogger-notice') %}
        <div class="blogger-notice">{{ msg|e }}</div>
    {% else %}
        <div class="blogger-notice"><em>no msg found</em></div>
    {% endfor %}


    <p>Want to contact symblog?</p>

        {{ form_start(form, {'attr': {'class': 'blogger'} }) }}
        {{ form_errors(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.subject) }}
        {{ form_row(form.body) }}

        {{ form_rest(form) }}

        <input type="submit" value="Submit" />
    {{ form_end(form) }}
{% endblock %}